@{
    if (ViewBag.mailList.Count != 0)
	{
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mail Name</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.mailList)
                    {
                        <tr>
                            <td>
                                <span class="fw-medium">@item.mail</span>
                            </td>
                            <td><span class="badge bg-label-primary me-1">Active</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="ti ti-dots-vertical"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item waves-effect" href="javascript:void(0);" onclick="handleUpdateClick(@item.id);"><i class="ti ti-edit me-1"></i> Update</a>
                                        <a class="dropdown-item waves-effect" href="javascript:void(0);" onclick="handleDeleteClick(@item.id);"><i class="ti ti-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
	}
}
