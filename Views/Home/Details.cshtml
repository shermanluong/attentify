@{
	Layout = "_Layout";
	ViewBag.title = "Messages";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Email</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Detail</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    partial("~/Views/Shared/LeftMessageMenu.cshtml")
                    
                    <div class="email-right-box">
                        <div role="toolbar" class="toolbar">
                            <div class="btn-group">
                                <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                                    More <span class="caret m-l-5"></span>
                                </button>
                                <div class="dropdown-menu more-actions" data-idx="@ViewBag.Mail.em_idx">
                                    <span class="dropdown-header label-primary">More Option :</span>
                                    <a href="javascript: void(0);" class="dropdown-item act-todo">To Do</a>
                                    <a href="javascript: void(0);" class="dropdown-item act-inprogress">In Progress</a>
                                    <a href="javascript: void(0);" class="dropdown-item act-onhold">Low Priority</a>
                                    <a href="javascript: void(0);" class="dropdown-item act-archived">Archived</a>
                                    <a href="javascript: void(0);" class="dropdown-item act-trash">Trash</a>
                                    <a href="javascript: void(0);" class="dropdown-item act-spam">Spam</a>
                                </div>
                            </div>
                        </div>

                        <div class="read-content">
                            <div class="media pt-5">
                                <img class="mr-3 rounded-circle bg-black" src="~/images/avatar/7.png">
                                <div class="media-body">
                                    <h5 class="m-b-3">@ViewBag.Mail.em_from</h5>
                                    <p class="m-b-2">@ViewBag.Mail.em_date.ToString("dd MMM yyyy")</p>
                                </div>
                            </div>
                            <hr>
                            <iframe srcdoc="@ViewBag.Mail.em_body" width="100%" height="300px"></iframe>
                            <hr>
                            <div class="respond-section d-none">
                                <div class="row mb-1">
                                    <label for="inputEmail" class="col-sm-1 col-form-label">To</label>
                                    <div class="col-sm-11">
                                        <input type="email" class="form-control fnt-13" id="inputEmail" value="@ViewBag.Mail.em_from" readonly>
                                    </div>
                                </div>
                                <div class="quill-editor-default"></div>
                                <div class="row mt-1">
                                    <div class="col-md-12 text-right">
                                        <button type="button" class="btn btn-primaryw-md fnt-13 btn-sendmail" data-idx="@ViewBag.Mail.em_idx">Send</button>
                                        <button type="button" class="btn btn-primaryw-md fnt-13 btn-respond-trash"><i class="icon-trash"></i></button>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-primaryw-md m-b-30 btn-respond" type="button" data-idx="@ViewBag.Mail.em_idx">Process</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card order-info d-none">
                <div class="card-body">
                    <div class="card-body">
                        <div class="card-title">
                            <h4></h4>
                        </div>
                        <div class="table-responsive">
                            <table class="table order-table">
                                <thead>
                                    <tr>
                                        <th>Order</th>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Channel</th>
                                        <th>Total</th>
                                        <th>Payment status</th>
                                        <th>Fulfillment status</th>
                                        <th>Items</th>
                                        <th>Tags</th>                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                </tbody>
                            </table>
                        </div> 
                        <div class="text-right m-t-15 btn-order" data-idx="0" data-emidx="0">
                            <button class="btn btn-warning m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10 btn-cancel" type="button">Cancel</button>
                            <button class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 btn-refund" type="button" btn-refund>Refund</button>
                            <button class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 d-none" type="button">Partial Refund</button>
                            <button class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 d-none" type="button">Send Tracking</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<form action="/home/messages" type="get" id="messages_form">
    <input type="hidden" value="" name="searchString" />
    <input type="hidden" value="@ViewBag.em_state" name="em_state" />
    <input type="hidden" value="0" name="nPageNo" />
</form>